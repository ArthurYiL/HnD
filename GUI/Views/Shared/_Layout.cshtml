<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="author" content="Solutions Design bv"/>
	<meta name="keywords" content="@ViewBag.Keywords"/>
	<meta name="description" content="@ViewBag.Description">

	<link rel="icon" href="/favicon.ico">
	<link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:100,300,400,600,700,900,400italic|Montserrat:400,700' rel='stylesheet'>

	<title>@ViewBag.Title</title>

	<!-- Bootstrap core CSS -->
	<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

	<!-- Custom styles for this template -->
	<link href="~/css/general_styles.css" rel="stylesheet">

	<!-- Custom color styling -->
	<link href="~/css/general_colors.css" rel="stylesheet" />

	<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
	<!--[if lt IE 9]>
	  <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
	  <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
	<![endif]-->
</head>

<body>
	<div id="main-wrapper">
		<div id="header">
			<nav class="navbar navbar-default navbar-fixed-top">
				<div id="main-header">
					<div class="container">
						<div class="navbar-header">
							<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#idMainMenu">
								<span class="sr-only">Toggle navigation</span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
								<span class="icon-bar"></span>
							</button>
							<a class="navbar-brand" href="~/">
								<img alt="Logo" src="~/pics/logo.png" height="24" />
							</a>
						</div>
						<div id="idMainMenu" class="collapse navbar-collapse navbar-right">
							<ul class="nav navbar-nav">
								@if(Request.IsAuthenticated)
								{
									<li><a href="~/Account/Logout">Log out</a></li>
								}
								else
								{
									<li><a href="#">Register</a></li>
									<li><a href="~/Account/Login">Log in</a></li>
								}
								<li><a href="activethreads.html">Active Threads</a></li>
								@if(SessionAdapter.ShouldSeeAdministrateMenu())
								{
									<li class="dropdown">
										<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Administrate<span class="caret"></span></a>
										<ul class="dropdown-menu menu submenu" role="menu">
											@if(SessionAdapter.CanApproveAttachment())
											{
												<li><a href="#">Approve Attachments</a></li>
											}
											@if(SessionAdapter.CanDoQueueContentMangement())
											{
												<li><a href="#">Support Queues</a></li>
											}
											@if(SessionAdapter.CanAdministrate())
											{
												<li role="presentation" class="divider"></li>
												<li role="presentation">Admin placeholder</li>
											}
										</ul>
									</li>
								}
								@if(Request.IsAuthenticated)
								{
									<li class="dropdown">
										<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">My Account<span class="caret"></span></a>
										<ul class="dropdown-menu menu submenu" role="menu">
											<li><a href="bookmarks.html">My Bookmarks</a></li>
											<li><a href="mythreads.html">My Threads</a></li>
											<li><a href="#">My Profile</a></li>
											<li><a href="#">Logout</a></li>
										</ul>
									</li>
								}
								<li><a href="#">Help</a></li>
							</ul>
						</div><!--/.nav-collapse -->
					</div>
				</div>
			</nav>
		</div>

		<div id="body-content">
			@RenderBody()
		</div>

		<div id="footer">
			<footer class="footer-wrapper">
				<div class="container">
					<div class="row">
						<div class="col-sm-6">
							<div class="footer-widget">
								<h3 class="footer-title">@ApplicationAdapter.GetSiteName()</h3>
								<ul class="footer-links clearfix">
									<li><a href="~/">Home</a></li>
									@if(Request.IsAuthenticated)
									{
										<li><a href="~/Account/Logout">Log out</a></li>
									}
									else
									{
										<li><a href="#">Register</a></li>
										<li><a href="~/Account/Login">Log in</a></li>
									}
									<li><a href="#">Active Threads</a></li>
									<li><a href="#">Search</a></li>
								</ul>
							</div>
						</div>
						<div class="col-sm-4 col-sm-offset-2">
							<div class="footer-widget">
								<div class="clearfix">
									Powered by <a href="https://github.com/SolutionsDesign/HnD" target="_blank">HnD</a> v3.0<br />&copy;2002-2015
									<a href="http://www.sd.nl/" target="_blank">Solutions Design bv</a><br />
									<a href="https://github.com/SolutionsDesign/HnD" target="_blank">HnD</a> uses
									<a href="http://www.llblgen.com" target="_blank">LLBLGen Pro</a><br /><br />
									Get your own copy of HnD at <a href="https://github.com/SolutionsDesign/HnD" target="_blank"><i class="fa fa-github-square"></i></a>
								</div>
							</div>
						</div>
					</div>
				</div>
			</footer>
		</div>
	</div>
	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
	<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
	<script src="//ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/additional-methods.min.js"></script>
	<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
	<script src="~/js/jquery.validate.unobtrusive.min.js"></script>
	<script src="~/js/general.js"></script>
	@RenderSection("scripts", required: false)
</body>
</html>
