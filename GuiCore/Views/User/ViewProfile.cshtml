@model SD.HnD.Gui.Models.UserProfileData

@{
	ViewBag.Title = string.Format("HnD | User profile of {0}", Model.ProfileDataFromDatabase.NickName ?? string.Empty);
}

<div class="container">
	<div class="row">
		<div class="col-sm-12 page-header-breadcrumbs">
			<ol class="breadcrumb plr0">
				<li>
					<a href="~/">Home</a>
				</li>
			</ol>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-12 pt0 mt0">
			<h2 class="br-bottom pt0 mt0">User profile of @Model.ProfileDataFromDatabase.NickName</h2>
		</div>
	</div>
</div>

<section class="fs mt20">
	<div class="container">
		<div class="row fs-row">
			<div class="mt10">
				<div class="col-sm-2">
					@if(!string.IsNullOrWhiteSpace(Model.ProfileDataFromDatabase.IconURL))
					{
						var fullURL = "https://" + Model.ProfileDataFromDatabase.IconURL;
						<img src="@fullURL" class="ps-poster-avatar center-block" alt="@Model.ProfileDataFromDatabase.NickName avatar"/>
					}
					<span>@Model.ProfileDataFromDatabase.NickName</span><br/>
					<span>@Model.ProfileDataFromDatabase.UserTitleDescription</span>
				</div>
				<div class="col-sm-3">
					<p>
						<i class="fas fa-envelope" title="Email address"></i>
						@if((Model.ProfileDataFromDatabase.EmailAddressIsPublic.HasValue && Model.ProfileDataFromDatabase.EmailAddressIsPublic.Value) || 
							Model.UserHasSystemManagementRight)
						{
							@Model.ProfileDataFromDatabase.EmailAddress;
						}
						else
						{
							<span>Email address is hidden</span>
						}
						<br/>
						<i class="fas fa-map-marker-alt" title="Location"></i> @Model.ProfileDataFromDatabase.Location<br/>
						<i class="fas fa-globe" title="Website"></i> <a href="https://@Model.ProfileDataFromDatabase.Website" target="_blank">https://@Model.ProfileDataFromDatabase.Website</a><br/>
						<i class="fas fa-gift" title="Date of birth"></i> 
						@if(Model.ProfileDataFromDatabase.DateOfBirth.HasValue)
						{
							<span>@Model.ProfileDataFromDatabase.DateOfBirth.Value.ToString("dd-MMM-yyyy")</span> <br/>
						}
						<i class="fas fa-building" title="Occupation"></i> @Model.ProfileDataFromDatabase.Occupation <br/>
						<i class="fas fa-signature" title="Signature"></i> @Model.ProfileDataFromDatabase.Signature <br/>
						<i class="fas fa-user-plus" title="Join date"></i> @Model.ProfileDataFromDatabase.JoinDate?.ToString("dd-MMM-yyyy") <br/>
						<i class="fas fa-pencil-alt" title="Number of postings"></i> @Model.ProfileDataFromDatabase.AmountOfPostings <br/>
						@if(Model.AdminSectionIsVisible)
						{
							<i class="fas fa-network-wired" title="IP Address"></i> @Model.ProfileDataFromDatabase.IPNumber <br/>
						}
					</p>
				</div>
			</div>
		</div>
	</div>
</section>